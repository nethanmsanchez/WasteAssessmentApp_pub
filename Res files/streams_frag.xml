<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/frag_container2"
    android:layout_width="361dp"
    android:layout_height="487dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="100dp"
    app:layout_constraintBottom_toTopOf="@+id/textView3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.wasteassessment2.Frag_input_Activity"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_border">


    <Button
        android:id="@+id/recyclebutton"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/smaller_rounded_border"
        android:text="Recyclables"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streamsfragtext" />

    <Button
        android:id="@+id/trashbutton"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/smaller_rounded_border"
        android:text="Trash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclebutton" />

    <Button
        android:id="@+id/otherbutton"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/smaller_rounded_border"
        android:text="Other"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compostbutton" />

    <Button
        android:id="@+id/compostbutton"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/smaller_rounded_border"
        android:text="Compost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trashbutton" />

    <TextView
        android:id="@+id/streamsfragtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="151dp"
        android:text="Please select a waste stream to begin."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/streamsbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/smaller_rounded_border"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherbutton" />

    <Button
        android:id="@+id/steamsdonebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/smaller_rounded_border"
        android:text="Done"
        app:layout_constraintStart_toEndOf="@+id/streamsbackbutton"
        app:layout_constraintTop_toBottomOf="@+id/otherbutton" />
</android.support.constraint.ConstraintLayout>